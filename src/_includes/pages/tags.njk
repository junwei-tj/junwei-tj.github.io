---
layout: blog
---

{% for tag in collections.blogTags %}
  <section>
    <h2 class="list-header">{{ tag }}</h2>
    <ul class="list-posts">
      {% for post in collections.blogPosts %}
        {% set tagExists = post.data.tags | hasTag(tag) %}
        {% if tagExists %}
          <li>
            <span class="list-posts-item-date">[{{ post.data.date | formatDateNumeric }}]</span>
            <a class="list-posts-item-title" href="{{ post.url }}">{{ post.data.title }}</a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </section>
{% endfor %}

